@model ToDoListTask


<form asp-action="AddTask" method="POST">
    <div class="form-group">
        <label for="Title" required>Add a new task:</label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Enter Task">
    </div>
    <div class="form-group">
        <label asp-for="Details">Details(Optional):</label>
        <input asp-for="Details" type="text" class="form-control" placeholder="Enter Details">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>